<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    >

    <RelativeLayout
        android:background="#3aaf44"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/screen_title"
            android:layout_marginTop="7dp"
            android:textColor="#fff"
            android:fontFamily="@font/harabara"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"
            android:text="Moallem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/image_cancel"
            android:layout_marginTop="7dp"
            android:layout_marginStart="5dp"
            android:src="@drawable/ic_close"
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/screen_title"
            android:id="@+id/subscreen_title"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:fontFamily="@font/roboto_regular"
            android:textSize="22sp"
            android:text="Free Sessions!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/subscreen_title"
            android:id="@+id/desc"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:fontFamily="@font/roboto_regular"
            android:textSize="20sp"
            android:text="@string/get50off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/desc"
            android:id="@+id/double_tab"
            android:layout_marginTop="15dp"
            android:textColor="#fff"
            android:fontFamily="@font/roboto_regular"
            android:textSize="20sp"
            android:text="Double tab to copy code! "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/double_tab"
            android:gravity="center"
            android:background="@drawable/phone_field_style"
            android:theme="@style/TextLabel"
            android:id="@+id/code_to_copy"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:text="Amma2514"
            android:textSize="22sp"
            />

        <ImageView
            android:layout_marginBottom="10dp"
            android:padding="7dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/share_style"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/code_to_copy"
            android:src="@drawable/ic_share"
            android:layout_width="50dp"
            android:layout_height="50dp" />


    </RelativeLayout>


    <TextView
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/app_text_color"
        android:fontFamily="@font/roboto_regular"
        android:textSize="20sp"
        android:text="Enter your promo/gift code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/phone_field_style"
        android:theme="@style/TextLabel"
        android:id="@+id/user_phonenumber"
        android:layout_width="210dp"
        android:layout_height="45dp"
        android:inputType="text"
        android:textSize="15sp"
        />

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/submit_button"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_marginBottom="5dp"
        android:background="@drawable/sign_button_style"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="Submit"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
</LinearLayout>
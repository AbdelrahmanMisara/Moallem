<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activities.PaymentCongrateActivity">

    <RelativeLayout
        android:background="#3aaf44"
        android:layout_width="match_parent"
        android:layout_height="325dp">

        <TextView

            android:id="@+id/screen_title"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:fontFamily="@font/harabara"
            android:layout_centerHorizontal="true"
            android:textSize="40sp"
            android:text="Moallem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@id/screen_title"
            android:id="@+id/subscreen_title"
            android:layout_marginTop="20dp"
            android:textColor="#fff"
            android:fontFamily="@font/roboto_regular"
            android:textSize="28sp"
            android:text="Congratulation!\n\nYour Minutes have been added to your account\n\nStart learing NOW!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_payment_done"
        android:layout_width="150dp"
        android:layout_height="150dp" />

    <TextView
        android:layout_gravity="center"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/app_text_color"
        android:fontFamily="@font/roboto_regular"
        android:textSize="28sp"
        android:text="Thanks for using Moallem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
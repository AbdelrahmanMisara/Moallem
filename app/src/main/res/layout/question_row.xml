<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="10dp"
    android:paddingBottom="5dp"
    android:layout_height="265dp">
    <ImageView
        android:scaleType="fitXY"
        android:id="@+id/image_qestion_row"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/image_qestion_row"
        android:layout_alignParentStart="true"
        android:id="@+id/teacher_image_qestion_row"
        android:layout_width="60dp"
        android:layout_height="60dp" />

    <TextView
        android:layout_marginTop="7dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:id="@+id/teacher_name"
        android:layout_below="@id/image_qestion_row"
        android:layout_toEndOf="@id/teacher_image_qestion_row"
        android:textColor="#000"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <TextView
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:id="@+id/question_date"
        android:layout_marginTop="5dp"
        android:layout_below="@id/teacher_name"
        android:layout_toEndOf="@id/teacher_image_qestion_row"
        android:textColor="#000"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="20dp" />

    <Button
        android:textSize="12sp"
        android:textColor="#fff"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/chat_box_shape_green"
        android:text="View"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:id="@+id/view_question_row"
        android:layout_below="@id/image_qestion_row"
        android:layout_width="wrap_content"
        android:layout_height="35dp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.VerificationPincodeActivity">

    <ProgressBar

        android:layout_alignParentTop="true"
        android:visibility="invisible"
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-7dp"
        android:indeterminate="true"
        />
    <TextView

        android:id="@+id/screen_title"
        android:layout_marginTop="30dp"
        android:textColor="@color/app_title_color"
        android:fontFamily="@font/roboto_regular"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:text="@string/verification_pin_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/price_confirmation"
        android:textSize="16sp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/screen_subtitle"
        android:textSize="16sp"
        android:text="@string/write_pincode_text"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/price_confirmation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/screen_phonenumber"
        android:textSize="16sp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/screen_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/resend_pincode"
        android:textSize="16sp"
        android:text="@string/resend_pin_code"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/screen_phonenumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/resend_pincode"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        >

        <EditText
            android:maxLength="1"
            android:inputType="number"
            android:id="@+id/pin1"
            android:layout_margin="5dp"
            android:textColor="#968d8d"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/pincode_box_style"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            />
        <EditText
            android:maxLength="1"
            android:inputType="number"
            android:id="@+id/pin2"
            android:layout_margin="5dp"
            android:textColor="#968d8d"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/pincode_box_style"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            />
        <EditText
            android:maxLength="1"
            android:inputType="number"
            android:id="@+id/pin3"
            android:layout_margin="5dp"
            android:textColor="#968d8d"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/pincode_box_style"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            />
        <EditText
            android:maxLength="1"
            android:inputType="number"
            android:id="@+id/pin4"
            android:layout_margin="5dp"
            android:textColor="#968d8d"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/pincode_box_style"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            />
        <EditText
            android:maxLength="1"
            android:inputType="number"
            android:id="@+id/pin5"
            android:layout_margin="5dp"
            android:textColor="#968d8d"
            android:textSize="40sp"
            android:gravity="center"
            android:background="@drawable/pincode_box_style"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            />
        <EditText
            android:inputType="number"
            android:id="@+id/pin6"
            android:layout_margin="5dp"
            android:textColor="#968d8d"
            android:textSize="40sp"
            android:gravity="center"
            android:maxLength="1"
            android:background="@drawable/pincode_box_style"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            />
    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/continu_button"
        android:textSize="20sp"
        android:textColor="#fff"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sign_button_style"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:text="@string/purchase_button"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</RelativeLayout>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>

    </style>


    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out</item>

    </style>


    <style name="EdittextStyle" >
        <item name="android:gravity">top</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="imagesignuploginStyle" >
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_width">@dimen/icons_dimens</item>
        <item name="android:layout_height">@dimen/icons_dimens</item>
    </style>

    <style name="TextLabel" parent="android:Widget.TextView">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/app_text_color</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/app_text_color</item>
        <item name="colorControlNormal">@color/app_text_color</item>
        <item name="colorControlActivated">@color/app_title_color</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogAnimation_2">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_bottom</item>
    </style>

</resources>
